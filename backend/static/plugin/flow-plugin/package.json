{
  "name": "flow-plugin",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "./build.sh",
    "build:css": "postcss src/flow-plugin.css -o src/flow-plugin.generated.css",
    "dev": "npm run build:css && esbuild src/index.ts --bundle --format=iife --platform=browser --jsx=automatic --external:react --external:react-dom/client --external:react/jsx-runtime --sourcemap --outfile=index.js --watch"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "react-icons": "^5.0.0",
    "react-markdown": "^9.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "esbuild": "^0.19.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.15"
  }
}
